{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "tubulang-ui": ["src/components/index.ts"],
      "tubulang-ui/esm/*": ["src/components/*"],
      "tubulang-ui/lib/*": ["src/components/*"]
    },
    "target": "esnext",
    "module": "commonjs",

    "declaration": true,
    "declarationDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors":true,

    "strictNullChecks": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,

    "lib": ["dom", "es2017"],

  },

  "exclude": ["node_modules", "src/**/__tests__"]
}
