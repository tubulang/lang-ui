{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "tubulang-ui": ["src/components/index.ts"],
      "tubulang-ui/esm/*": ["src/components/*"],
      "tubulang-ui/lib/*": ["src/components/*"]
    },
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src", "global.d.ts"],
  "exclude": ["node_modules", "src/**/__tests__"]
}
